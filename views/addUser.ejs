<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
            <div class="container">
                <!--<img src="assets/img/navbar-logo.svg" alt="" />-->
                <a class="navbar-brand js-scroll-trigger" href="#page-top">Library</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ml-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ml-auto">
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#contact">Add user</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Masthead-->
        <header class="masthead">
            <div class="container">
                <div class="masthead-subheading">Welcome To Our Library!</div>
                <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="/admin">Back</a>
            </div>
        </header>
        <!-- Contact-->
        <section class="page-section" id="contact">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Contact Us</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
                <form action="/admin/addUser/store" method="POST">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6 center">
                            <div class="form-group addBook">
                                <input class="form-control" name="Email" id="email" type="email" placeholder="Your Email *" required="required" data-validation-required-message="Please enter your email address." />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group addBook">
                                <input class="form-control" name="Name" id="name" type="text" placeholder="Your Name *" required data-validation-required-message="Please enter your email address." />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group mb-md-0 addBook">
                                <input class="form-control" name="Scmnd" id="scmnd" type="text" placeholder="Scmnd *" required data-validation-required-message="Please enter your password." />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group mb-md-0 addBook">
                                <input class="form-control" name="Password" id="password" type="password" placeholder="Password *" required data-validation-required-message="Please enter your password." />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group mb-md-0">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Admin" id="flexRadioDefault1" value="Admin">
                                    <label class="form-check-label while" for="flexRadioDefault1">
                                    Admin
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Admin" id="flexRadioDefault2" value="User" checked>
                                    <label class="form-check-label while" for="flexRadioDefault2">
                                    User
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center ">
                        <div id="success"></div>
                        <div class="addBook">
                            <span><%= message %></span>
                        </div>
                        <button class="btn btn-primary btn-xl text-uppercase" id="sendMessageButton" type="submit">Add user</button>
                    </div>
                </form>
            </div>
        </section>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
    </body>
</html>
