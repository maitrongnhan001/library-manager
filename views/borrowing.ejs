<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
            <div class="container">
                <!--<img src="assets/img/navbar-logo.svg" alt="" />-->
                <a class="navbar-brand js-scroll-trigger" href="#page-top">Library</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ml-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ml-auto">
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#portfolio">Borrowing</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Masthead-->
        <header class="masthead">
            <div class="container">
                <div class="masthead-subheading">Welcome To Our Library!</div>
                <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="/user">Back</a>
            </div>
        </header>
        <!-- Books-->
        <section class="page-section" id="book-info">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Book information</h2>
                <h3 class="section-subheading text-muted">Information of books borrowed<br>go to the library to return the book, please</h3>
            </div>
            <% for (var i = 0; i < BorrowInfo.length; i++){ %>
                <div class="container-book">
                    <div class="container-book">
                        <div class="container-img">
                            <img class="book-img" src="<%= BorrowInfo[i].pathImage %>">
                        </div>
                        <div class="container-info">
                            <p><b>Name:</b><%= BorrowInfo[i].NameBook %></p>
                            <p><b>Code:</b><%= BorrowInfo[i].CodeBook %></p>
                            <p><b>Borrow amount:</b><%= BorrowInfo[i].Amount %></p>
                        </div>
                    </div>
                </div>
                <hr>
            <% } %>
        </section>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
    </body>
</html>
